#include <iostream>
#include<array>

using namespace std;
int main() {
  
  int basic[3] ={1,2,3};

  array<int,4> a = {1,2,3,4}; // creating and initializing a array.

  int size = a.size(); // to find size of array.

  for(int i=0;i<size;i++ ){ 
    cout<<a[i]<<endl;
  }

  cout<<"Element at 2nd Index-> "<<a.at(2)<<endl; // to find element at a index.

  cout<<"Empty or not-> "<<a.empty()<<endl; //to know that array is empty or not.

  cout<<"First Element-> "<<a.front()<<endl; // to know first element in array.
  
  cout<<"last Element-> "<<a.back()<<endl; // to know last element in array.

}
